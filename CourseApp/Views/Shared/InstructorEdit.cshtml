@model CourseApp.Models.Instructor
@{int counter = 0; }

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />

    @foreach (var course in Model.Courses)
    {
        <div class="row mb-2">
            <input type="hidden" value="@course.Id" />
        
            <div class="col">
                <input type="text" class="form-control" name="Courses[@counter].Name " value="@course.Name" />
            </div>
            <div class="col">
                <input type="text" class="form-control" name="Courses[@counter].Price " value="@course.Price" />
            </div>

        </div>
        { counter++; }
    }
</form>